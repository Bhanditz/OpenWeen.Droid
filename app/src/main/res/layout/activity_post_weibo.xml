<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_weibo_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="moe.tlaster.openween.activity.PostWeiboActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/post_weibo_grid"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <com.mikepenz.iconics.view.IconicsCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="{gmd-image}"
                android:id="@+id/post_weibo_add_image_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <com.mikepenz.iconics.view.IconicsCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="{gmd-insert-emoticon}"
                app:iiv_color="@android:color/darker_gray"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/post_weibo_add_image_button"
                android:id="@+id/post_weibo_add_emotion_button"/>

            <com.mikepenz.iconics.view.IconicsCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="{gmd-send}"
                android:id="@+id/post_weibo_send_button"
                android:layout_alignParentEnd="true"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_weibo_textcount"
                android:textSize="22sp"
                android:text="140"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/post_weibo_send_button"/>
        </RelativeLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/post_weibo_edit_text"
            android:hint="说些什么吧"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/post_weibo_grid"/>

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:padding="@dimen/dp_10"
            android:minHeight="100dp"
            android:id="@+id/post_weibo_image_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/post_weibo_grid"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
