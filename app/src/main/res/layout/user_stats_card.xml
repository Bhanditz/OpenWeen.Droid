<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingStart="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/user_stats_follow_state"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <View android:layout_height="1dp"
              android:layout_width="match_parent"
              android:background="@color/colorPrimary"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/dp_10">
            <TextView
                android:id="@+id/user_stats_user_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:text="Well, I make Android apps and go to school."/>
            <LinearLayout
                android:id="@+id/user_stats_location_box"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/gmd_location_city"
                    app:iiv_color="@android:color/black"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="@dimen/message_button"
                    android:layout_height="@dimen/message_button"/>
                <TextView
                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/user_stats_location"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/message_button_text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_stats_url_box"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/gmd_public"
                    app:iiv_color="@android:color/black"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="@dimen/message_button"
                    android:layout_height="@dimen/message_button"/>
                <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginStart="@dimen/dp_10"
                    android:autoLink="web"
                    android:id="@+id/user_stats_url"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/message_button_text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_stats_verified_box"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/gmd_check_circle"
                    app:iiv_color="@android:color/black"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_width="@dimen/message_button"
                    android:layout_height="@dimen/message_button"/>
                <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginStart="@dimen/dp_10"
                    android:autoLink="web"
                    android:id="@+id/user_verified_reason"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/message_button_text"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10">
            <LinearLayout
                android:id="@+id/user_stats_following_layout"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/md_black_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注:"
                        android:maxLines="1"/>
                    <TextView
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/user_stats_following_count"
                        android:textColor="@color/md_black_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal"
                              android:layout_marginTop="@dimen/dp_10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_stats_following_icon_1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:minHeight="36dp" android:minWidth="36dp"
                            android:maxWidth="36dp" android:maxHeight="36dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_stats_following_icon_2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="-6dp"
                            android:minHeight="36dp" android:minWidth="36dp"
                            android:maxWidth="36dp" android:maxHeight="36dp"/>

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_stats_following_icon_3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="-6dp"
                        android:minHeight="36dp" android:minWidth="36dp"
                        android:maxWidth="36dp" android:maxHeight="36dp"/>

                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/user_stats_follower_layout"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/md_black_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝:"
                        android:maxLines="1"/>
                    <TextView
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/user_stats_follower_count"
                        android:textColor="@color/md_black_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal"
                              android:layout_marginTop="@dimen/dp_10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_stats_follower_icon_1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:minHeight="36dp" android:minWidth="36dp"
                            android:maxWidth="36dp" android:maxHeight="36dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_stats_follower_icon_2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="-6dp"
                            android:minHeight="36dp" android:minWidth="36dp"
                            android:maxWidth="36dp" android:maxHeight="36dp"/>

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_stats_follower_icon_3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="-6dp"
                        android:minHeight="36dp" android:minWidth="36dp"
                        android:maxWidth="36dp" android:maxHeight="36dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/md_black_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册时间:"/>
            <TextView
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_stats_created_time"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>