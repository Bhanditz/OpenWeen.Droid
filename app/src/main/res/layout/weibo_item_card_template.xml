<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_width="@dimen/user_img"
        android:layout_height="@dimen/user_img"
        android:id="@+id/user_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_name_height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_black_1000"
        android:textSize="16sp"
        android:id="@+id/user_name"
        android:text="name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_img"/>

    <TextView
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/created_time"
        android:layout_below="@+id/user_name"
        android:layout_toEndOf="@+id/user_img"/>

    <moe.tlaster.openween.common.controls.WeiboTextBlock
        android:paddingTop="@dimen/dp_10"
        android:layout_alignWithParentIfMissing="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weibo_content"
        android:textColor="@color/md_black_1000"
        android:layout_below="@+id/user_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <com.jaeger.ninegridimageview.NineGridImageView
        android:paddingTop="@dimen/dp_10"
        app:imgGap="@dimen/dp_4"
        app:maxSize="9"
        app:showStyle="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weibo_img"
        android:layout_below="@+id/weibo_content"
        android:layout_toEndOf="@+id/weibo_content"
        android:layout_alignParentStart="true"/>

</RelativeLayout>